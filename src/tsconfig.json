{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": ["es6"],
        "strict": true,
        "pretty": true,
        "outDir": "../build",
        "inlineSourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./**/*.ts"]
}
